<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#7F000000">

    <!-- Banner -->
    <ImageView
        android:id="@+id/pc_rewards_welcome_banner"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/pc_rewards_welcome_banner_height"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/pc_rewards_welcome_banner" />
    <!-- /Banner -->

    <!-- Coin -->
    <ImageView
        android:id="@+id/pc_rewards_welcome_coin"
        android:layout_width="@dimen/pc_rewards_welcome_coin_width"
        android:layout_height="@dimen/pc_rewards_welcome_coin_height"
        android:layout_alignBottom="@id/pc_rewards_welcome_banner"
        android:layout_marginLeft="@dimen/pc_rewards_welcome_coin_margin_left"
        android:layout_marginBottom="@dimen/pc_rewards_welcome_coin_margin_bottom"
        android:scaleType="centerInside"
        android:src="@drawable/pc_rewards_welcome_coin" />

    <ImageView
        android:layout_width="@dimen/pc_rewards_welcome_coin_text_width"
        android:layout_height="@dimen/pc_rewards_welcome_coin_text_height"
        android:layout_alignTop="@id/pc_rewards_welcome_coin"
        android:layout_alignLeft="@id/pc_rewards_welcome_coin"
        android:layout_marginTop="@dimen/pc_rewards_welcome_coin_text_margin_top"
        android:layout_marginLeft="@dimen/pc_rewards_welcome_coin_text_margin_left"
        android:scaleType="centerInside"
        android:src="@drawable/pc_rewards_welcome_coin_text" />
    <!-- /Coin -->

    <!-- Welcome to Pocket Change -->
    <include layout="@layout/pc_rewards_welcome_text" />
    <!-- /Welcome to Pocket Change -->

    <!-- Shop button -->    
    <ImageButton
        android:layout_width="@dimen/pc_rewards_welcome_shop_button_width"
        android:layout_height="@dimen/pc_rewards_welcome_shop_button_height"
        android:layout_alignTop="@id/pc_rewards_welcome_banner"
        android:layout_alignRight="@id/pc_rewards_welcome_banner"
        android:layout_marginTop="@dimen/pc_rewards_welcome_shop_button_margin_top"
        android:layout_marginRight="@dimen/pc_rewards_welcome_shop_button_margin_right"
        android:paddingTop="@dimen/pc_rewards_welcome_shop_button_padding_top"
        android:paddingLeft="@dimen/pc_rewards_welcome_shop_button_padding_left"
        android:paddingBottom="@dimen/pc_rewards_welcome_shop_button_padding_bottom"
        android:paddingRight="@dimen/pc_rewards_welcome_shop_button_padding_right"
        android:scaleType="centerInside"
        android:src="@drawable/pc_rewards_welcome_shop_button_shopping_cart"
        android:background="@drawable/pc_rewards_welcome_shop_button_bg" 
        android:onClick="openShop" />
    <!-- /Shop button -->
</RelativeLayout>